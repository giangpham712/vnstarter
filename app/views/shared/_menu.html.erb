                          <li><%= link_to "Thông tin cá nhân", profile_path %></li>
                          <li><%= link_to "Dự án đã tạo", profile_projects_path %></li>
                          <li><%= link_to "Đăng xuất", destroy_user_session_path %></li>
                        </ul>
