<% page_title "Projects" %>
<h1>Projects</h1>

<% @projects.each do |project| %>

    <p>
        <%= link_to(project) do %>
          <h3><%= project.title %></h3>

          <% if project.image.exists? %>
            <%= image_tag project.image.url %>
          <% end %>

          <%= project.short_description %>
        </p>
    <% end %>
    <br/>
<% end %>