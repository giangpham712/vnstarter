<%= render "shared/menu" %>
<div class="content-wrapper hide-until-loading">
  <div class="body-wrapper">
    <h2 class="h2-section-title">Các dự án</h2>

    <div class="divider divider-shadow"></div>
    <div class="section-content section-tabs full-tabs">
      <div class="tab-container">
        <div class="section-tab-arrow"></div>
        <div class="section-etabs-container">
          <ul class="section-etabs">
            <li class="tab active">
              <a href="#tabc1"> Đời sống </a>
            </li>
            <li class="tab">
              <a href="#tabc2"> Âm nhạc </a>
            </li>
            <li class="tab">
              <a href="#tabc3"> Công nghệ </a>
            </li>
            <li class="tab">
              <a href="#tabc4"> Nhiếp ảnh </a>
            </li>
            <li class="tab">
              <a href="#tabc5"> Nhà hàng </a>
            </li>
            <li class="tab">
              <a href="#tabc6"> Cộng đồng </a>
            </li>
            <li class="tab">
              <a href="#tabc7"> Môi trường </a>
            </li>
            <li class="tab">
              <a href="#tabc8"> Du lịch </a>
            </li>
            <li class="tab">
              <a href="#tabc9"> Bảo tàng </a>
            </li>
          </ul>
        </div>

        <div class="tab-content">

          <div id="tabc1">
            <div class="section-content ">
              <div class="container">

                <div class="container">
                  <div class="row">
                    <div class="row">
                      <% @projects.each do |project| %>

                          <div class="col-md-3 col-sm-3">
                            <div class="feature animated" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                              <div class="feature-image img-overlay">
                                <% if project.image.exists? %>
                                    <%= image_tag project.image.url %>
                                <% end %>

                                <div class="item-img-overlay">
                                  <a class="portfolio-zoom fa fa-plus" href="media/blog1.jpg"
                                     data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>

                                </div>

                              </div>

                              <div class="feature-content">
                                <h3 class="h3-body-title blog-title">
                                  <%= link_to(project) do %>
                                      <%= project.title %>
                                  <% end %>
                                </h3>

                                <p>
                                  <%= project.short_description %>
                                </p>

                                <p><span class="fa fa-map-marker"></span>&nbsp; <%= project.location %></p>

                                <div class="progress">
                                  <div class="progress-bar animated" role="progressbar" aria-valuenow="2%"
                                       aria-valuemin="0" aria-valuemax="100"
                                       data-animtype="animate-progress"
                                       data-animrepeat="0">
                                  </div>
                                </div>
                                <span class="">2.5tr/200tr&nbsp;|Còn 2 ngày</span>
                              </div>

                              <div class="feature-details">
                                <i class="icon-calendar"></i>
                                <span>July 10, 2013</span>
                                <span class="details-seperator"></span>

                                <a href="#"><i class="icon-comment"></i><span>4</span></a>


                                <div class="feature-share">
                                  <a href="#"><i class="icon-heart"></i></a>
                                  <a href="#"><i class="icon-facebook"></i></a>
                                </div>
                              </div>
                            </div>
                          </div>

                      <% end %>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>

          <div id="tabc2"></div>

          <div id="tabc3"></div>

          <div id="tabc4"></div>

          <div id="tabc5"></div>

          <div id="tabc6"></div>

          <div id="tabc7"></div>

          <div id="tabc8"></div>

          <div id="tabc9"></div>

        </div>
      </div>
    </div>


    <div class="space-sep40"></div>

  </div>
  <!--.content-wrapper end -->

</div>



