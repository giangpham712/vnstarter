

<% page_title "Create your project" %>
<h2>Create project</h2>

<%= form_for :project, url: projects_path do |f| %>

<div class="field">
  <%= f.label :title %><br/>
  <%= f.text_field :title, autofocus: true %>
</div>

<div class="field">
  <%= f.label "Category" %><br/>
  <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
</div>

<div class="field">
  <%= f.label :location %><br/>
  <%= f.select :location, options_from_collection_for_select(@cities, 'name', 'name') %>
</div>

<div class="actions">
  <%= f.submit "Create" %>
</div>
<% end %>


