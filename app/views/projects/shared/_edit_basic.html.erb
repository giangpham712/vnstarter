<%= form_for :project, url: project_path(@project), method: :put do |f| %>
    <div class="title-block clearfix">
      <h3 class="h3-body-title">Thêm ảnh và những thông tin cơ bản về dự án của bạn</h3>

      <div class="title-seperator"></div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">

        <div class="row">
          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label t('project.edit.basic.project_image') %>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.file_field :image, autofocus: true, class: 'file-button' %>
            </div>
          </div>

          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label t('project.edit.basic.project_title') %><br/>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.text_field :title, autofocus: true, class: 'form-control' %>

            </div>
          </div>

          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label t('project.edit.basic.short_description') %>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.text_area :short_description, class: 'form-control' %>

            </div>
          </div>

          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label t('project.edit.basic.category') %>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.select :category_id, options_for_select(@categories.map { |c| [c.name, c.id] }, @project.category_id), { :include_blank => false }, { class: 'form-control' } %>

            </div>
          </div>

          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label t('project.edit.basic.location') %>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.select :location, options_for_select(@cities.map { |city| city.name }, @project.location), { :include_blank => false }, { class: 'form-control' } %>

            </div>
          </div>

          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label :funding_duration %>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              Number of days: <%= f.number_field :duration, class: 'form-control' %> <br>
              End on date & time: <%= f.date_field :deadline, class: 'form-control' %>

            </div>
          </div>
          <div class='form-element'>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <%= f.label :funding_goal %>
            </div>

            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.number_field :funding_goal, class: 'form-control' %>

            </div>
          </div>

        </div>


      </div>

      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class='form-element'>
          <p>Nội quy</p>
        </div>
        <div class="row">
          <div class="col-sm-12 col-md-12 project-info">


            <div class="feature animated" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
              <div class="feature-image img-overlay">
                <img src="" alt="Blog" />

                <div class="item-img-overlay">
                  <a class="portfolio-zoom fa fa-plus" href="media/blog1.jpg"
                     data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>

                </div>

              </div>

              <div class="feature-content">
                <h3 class="h3-body-title blog-title">
                  <a href="#">Tên dự án</a>
                </h3>

                <p>
                  Mô tả về dự án.
                  <br>
                  Tên tác giả
                </p>

                <p><span class="fa fa-map-marker"></span>&nbsp;Hà nội</p>

                <div class="progress">
                  <div class="progress-bar animated" role="progressbar" aria-valuenow="85%"
                       aria-valuemin="0" aria-valuemax="100"
                       data-animtype="animate-progress"
                       data-animrepeat="0">
                  </div>
                </div>
                <span class="">2.5tr/3tr&nbsp;|Còn 2 ngày</span>
              </div>

              <div class="feature-details">
                <i class="icon-calendar"></i>
                <span>July 10, 2013</span>
                <span class="details-seperator"></span>

                <a href="#"><i class="icon-comment"></i><span>4</span></a>


                <div class="feature-share">
                  <a href="#"><i class="icon-heart"></i></a>
                  <a href="#"><i class="icon-facebook"></i></a>
                </div>
              </div>
            </div>

            <button type="button" style='float:right;margin-top:20px;' class="btn btn-success">Chỉnh
              sửa
            </button>
          </div>
        </div>
      </div>
    </div>

<% end %>
