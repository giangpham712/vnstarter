<div class="modal" id='modal_add_reward' data-remodal-id="modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title">Thêm phần thưởng</h3>
      </div>
      <div class="modal-body clearfix">
        <div ng-show="reward.errors.length > 0" ng-cloak class="errors alert alert-danger alert-dismissible" role="alert">
          Có lỗi xảy ra khi lưu:
          <ul>
            <li ng-repeat="error in reward.errors" ng-bind="error"></li>
          </ul>
        </div>
        <div class="form-element">
          <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
            <span>Khoản góp yêu cầu</span>
          </div>
          <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9">
            <input type="text" ng-model="reward.minimumPledgeAmount" ng-auto-numeric="currency" class="form-control" rows="4"/>
            <br>
          </div>
        </div>
        <div class="form-element">
          <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
            <span>Mổ tả</span>
          </div>
          <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9">
            <div class="limit-characters">
              <textarea ng-model="reward.description" ng-trim="false" class="form-control" maxlength="{{rewardDescriptionMaxLength}}" rows="5"></textarea>

              <p ng-bind="rewardDescriptionMaxLength - reward.description.length + '/' + rewardDescriptionMaxLength"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
        <button type="button" ng-click="saveReward()" class="btn btn-primary">Lưu</button>
      </div>

    </div>
  </div>
</div>