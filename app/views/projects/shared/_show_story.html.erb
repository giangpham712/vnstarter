<div class="row">
  <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">

    <div class="story-posts">
      <% @project.posts.each do |post| %>
          <div class='post'>
            <h2><%= post.title %></h2>
            <% if post.image.exists? %>
                <div class="image-container text-center">
                  <img src="<%= post.image.url(:large) %>" title="<%= post.title %>"/>
                </div>
            <% end %>
            <p>
              <%= post.body %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
    <h3>Phần thưởng</h3>

    <div class="rewards">
      <% @project.rewards.each do |reward| %>
          <div class="reward">
            <h5>Góp <%= number_to_currency(reward.minimum_pledge_amount, precision: 0) %> hoặc nhiều hơn</h5>
            <br/>

            <p>
              <%= reward.description %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
</div>
