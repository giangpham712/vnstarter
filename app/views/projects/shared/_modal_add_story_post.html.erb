<div class="modal" id='modal_add_story_post' data-remodal-id="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title">Thêm câu chuyện của bạn</h3>
      </div>
      <div class="modal-body clearfix">
        <div ng-show="post.errors.length > 0" ng-cloak class="errors alert alert-danger alert-dismissible" role="alert">
          Có lỗi xảy ra khi lưu:
          <ul>
            <li ng-repeat="error in post.errors" ng-bind="error"></li>
          </ul>
        </div>
        <div class="form-element">
          <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
            <span>Ảnh</span>
          </div>
          <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9">
            <input type="file" class="file-button"/>
          </div>
        </div>
        <div class="form-element">
          <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
            <span>Tiêu đề</span>
          </div>
          <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9">
            <input type="text" ng-model="post.title" class="form-control"/>
            <br>
          </div>
        </div>
        <div class="form-element">
          <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
            <span>Nội dung</span>
          </div>
          <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9">
            <div class="limit-characters">
              <textarea ng-model="post.body" ng-trim="false" class="form-control" maxlength="{{postBodyMaxLength}}" rows="10"></textarea>
              <p ng-bind="postBodyMaxLength - post.body.length + '/' + postBodyMaxLength"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
        <button type="button" ng-click="savePost()" class="btn btn-primary">Lưu</button>
        <img src="/assets/assets/loader.gif" class="loader"/>
      </div>

    </div>
  </div>
</div>