<div class="modal fade" id='add-story-post' data-remodal-id="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for [@project, @project.posts.build], :html => { :multipart => true }, method: :post do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h3 class="modal-title">Thêm câu chuyện của bạn</h3>
          </div>
          <div class="modal-body clearfix">
            <div class="errors alert alert-danger alert-dismissible" style="display: none;" role="alert">
                Có lỗi xảy ra khi lưu:
                <ul></ul>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <span>Ảnh</span>
            </div>
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.file_field :image, class: 'file-button' %>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <span>Tiêu đề</span>
            </div>
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.text_field :title, class: 'form-control', :rows => "4" %>
              <br>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <span>Nội dung</span>
            </div>
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= f.text_area :body, class: 'form-control', :rows => "4" %>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-primary">Thêm</button>
          </div>
      <% end %>
    </div>
  </div>
</div>