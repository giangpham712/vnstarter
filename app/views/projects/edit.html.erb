<% page_title t(:edit_your_project) %>
<% body_id "project_edit" %>

<div class="content-wrapper hide-until-loading">
  <div class="body-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12 animated" data-animtype="flipInY"
             data-animrepeat="0"
             data-speed="1s"
             data-delay="0.5s">

          <h2 class="h2-section-title"><%= t :edit_your_project %></h2>

          <div class="col-md-12 col-sm-12 centered">
          </div>
          <div class="i-section-title">
            <i class="icon-users-outline">

            </i>
          </div>

          <div class="space-sep20"></div>
        </div>
      </div>

      <div class="row">

        <div class="col-md-12 col-sm-12 centered">

          <div class="row">
            <div class="col-md-12 col-sm-12">
              <div class="title-block clearfix">
                <h3 class="h3-body-title">Khởi tạo dự án</h3>

                <div class="title-seperator"></div>
              </div>
              <div class="bg-white">
                <%= hidden_field_tag :id, @project.id %>
                <%= hidden_field_tag :slug, @project.slug %>

                <div class="tab-container">
                  <ul id="edit-tabs" class="etabs">

                    <li class="tab active" role="presentation">
                      <a href="#basic" data-edit-info="basic" aria-controls="home" role="tab" data-toggle="tab"><i class=icon-feather></i>Thông
                        tin dự án</a>
                    </li>

                    <li class="tab" role="presentation">
                      <a href="#rewards" data-edit-info="rewards" aria-controls="home" role="tab" data-toggle="tab"><i class=icon-drive></i>Phần
                        thưởng</a>
                    </li>

                    <li class="tab" role="presentation">
                      <a href="#story" data-edit-info="story" aria-controls="home" role="tab" data-toggle="tab"><i class=icon-drive></i>Câu
                        chuyện</a>
                    </li>

                    <li class="tab" role="presentation">
                      <a href="#about_you" data-edit-info="profile" aria-controls="home" role="tab" data-toggle="tab"><i class=icon-map></i>Thông
                        tin cá nhân</a>
                    </li>

                    <li class="tab" role="presentation">
                      <a href="#accounts" data-edit-info="accounts" aria-controls="home" role="tab" data-toggle="tab"><i class=icon-map></i> Tài
                        khoản </a>
                    </li>

                  </ul>
                  <div class="tabs-content">

                    <div id="basic" role="tabpanel" class="active">
                      <%= render "projects/shared/edit_basic" %>
                    </div>
                    <div id="rewards" role="tabpanel">
                      <%= render "projects/shared/edit_rewards" %>
                    </div>
                    <div id="story" role="tabpanel">
                      <%= render "projects/shared/edit_story" %>
                    </div>
                    <div id="about_you" role="tabpanel">
                      <%= render "projects/shared/edit_about_you" %>
                    </div>
                    <div id="accounts" role="tabpanel">
                      <%= render "projects/shared/edit_accounts" %>
                    </div>
                  </div>
                </div>

                <div class="tools visible">
                  <div class="container">
                    <ol class="tools-panels pull-right no-margin">
                      <li class="form-tools">
                        <div class="">
                          <a class="btn-link hidden" href="#">Hủy thay đổi</a></div>
                        <div id="save" class="">
                          <a class="btn btn-green" href="#">Lưu thay đổi</a>
                        </div>
                      </li>
                    </ol>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "projects/shared/modal_add_story_post" %>
