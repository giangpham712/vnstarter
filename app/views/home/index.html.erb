<% page_title "Vnstarter" %>
<% body_id "home" %>
<div class="body-wrapper">

  <div class="content-wrapper">
    <div class="jumbotron slider">

      <div class="slide cool-gradient lazy slick-slide" style="width: 1903px; position: relative; left: -1903px; top: 0px; z-index: 800; opacity: 0; display: table; overflow: hidden; background-image: url(https://cdn.crowdrise.com/library/foundation/img/jumbotron/girl-water.jpg);background-size:100%;" index="1" src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==">
        <div class="text">
          <div class="row">
            <div class="column large-12 large-centered">

              <h2>Mang ước mơ của bạn ra thế giới</h2>
              <h4>Raise money for over 1.5 million charities including Red Cross, UNICEF, SU2C, and more</h4>
              <a href="/home/about" class="border-button primary on-dark">Về chúng tôi</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="sticky-nav">
      <dl class="sub-nav">
        <dd data-magellan-arrival="top-projects" class="smoothScroll">
          <a href="#featured_projects" class="smoothScroll">Dự án nổi bật</a></dd>
        <!--
        <dd data-magellan-arrival="ideas" class="smoothScroll"><a href="#ideas" class="smoothScroll" >Những nhà đầu tư hàng đầu</a></dd>
        -->
        <dd data-magellan-arrival="why" class="smoothScroll">
          <a href="/home/about" class="smoothScroll">Vì sao tham gia Vnstarter</a></dd>
      </dl>
    </div>

    <div id="featured_projects" class="alt-bg">
      <div class="container">
        <div class="project-card-list">
          <h2 class="section-title">Dự án nổi bật</h2>

          <div class="row">
            <% @projects.each do |project| %>
                <div class="col-md-4 col-sm-4">
                  <div class="feature project animated project-block" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                    <%= link_to(project) do %>
                        <div class="feature-image img-overlay">
                          <%= image_tag project.image.url(:small) %>
                        </div>
                    <% end %>
                    <div class="feature-content">
                      <div class="project-info">
                        <%= link_to(project) do %>
                            <h6 class="project-title">
                              <%= project.title %>
                            </h6>
                        <% end %>
                        <p>
                          <%= project.short_description %>
                        </p>
                      </div>

                      <div class="project-status">
                        <p><span class="fa fa-map-marker"></span>&nbsp;<%= project.location %></p>

                        <div class="progress">
                          <div class="progress-bar animated" role="progressbar" aria-valuenow="<%= project.pledges.sum(:pledge_amount)*100 %>%"
                               aria-valuemin="0" aria-valuemax="100"
                               data-animtype="animate-progress"
                               data-animrepeat="0">
                          </div>
                        </div>
                        <ul class="project-stats">

                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
