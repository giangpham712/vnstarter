<% page_title "Kanzi" %>
<% body_id "home" %>
<div class="body-wrapper">

  <div class="content-wrapper">
    <div class="jumbotron slider">
     
      <div class="slide cool-gradient lazy slick-slide" style="width: 1903px; position: relative; left: -1903px; top: 0px; z-index: 800; opacity: 0; display: table; overflow: hidden; background-image: url(https://cdn.crowdrise.com/library/foundation/img/jumbotron/girl-water.jpg);background-size:100%;" index="1" src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==">
        <div class="text">
          <div class="row">
            <div class="column large-12 large-centered">

              <h2>Mang ước mơ của bạn ra thế giới</h2>
              <h4>Raise money for over 1.5 million charities including Red Cross, UNICEF, SU2C, and more</h4>
              <a href="/projects/new" class="border-button primary on-dark">Bắt đầu ngay</a>
            </div>
          </div>
        </div>
      </div>
       <div class="slide cool-gradient lazy slick-slide" style="width: 1903px; position: relative; left: -1903px; top: 0px; z-index: 800; opacity: 0; display: table; overflow: hidden; background-image: url(/media/blog2-thumb.jpg);background-size:100%;" index="1" src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==">
        <div class="text">
          <div class="row">
            <div class="column large-12 large-centered">

              <h2>Đem tiền bạc đầu tư đúng chỗ</h2>
              <h4>Raise money for over 1.5 million charities including Red Cross, UNICEF, SU2C, and more</h4>
              <a href="/discover" class="border-button primary on-dark">Đầu tư ngay</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="sticky-nav">
      <dl class="sub-nav">
        <dd data-magellan-arrival="explore" class=""><a href="#explore">Dự án nổi bật</a></dd>
        <dd data-magellan-arrival="ideas" class=""><a href="#ideas">Những nhà đầu tư hàng đầu</a></dd>
        <dd data-magellan-arrival="why" class=""><a href="#why">Vì sao nên tham gia Kanzi</a></dd>
      </dl>
    </div>

    <div id="top-projects">
      <div class="container">

        <div class="row">
          <div class="col-md-12 col-sm-12 animated" data-animtype="fadeInUp"
               data-animrepeat="0"
               data-speed="1s"
               data-delay="0.4s">
            <h2>Những dự án nổi bật</h2>
          </div>
        </div>
        <div class="space-sep20"></div>
        <div class="row">

          <% @projects.each do |project| %>
              <div class="col-md-3 col-sm-3">
                <div class="feature project animated" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                  <div class="feature-image img-overlay">
                    <% if project.image.exists? %>
                        <%= image_tag project.image.url(:listing) %>
                    <% end %>

                    <div class="item-img-overlay">
                      <a class="portfolio-zoom fa fa-plus" href="media/blog1.jpg"
                         data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>

                    </div>

                  </div>

                  <div class="feature-content">
                    <div class="project-info">
                      <%= link_to(project) do %>
                          <h6 class="project-title">
                            <%= project.title %>
                          </h6>
                      <% end %>

                      <p>
                        <%= project.short_description %>
                      </p>


                    </div>

                    <div class="project-status">
                      <p><span class="fa fa-map-marker"></span>&nbsp;<%= project.location %></p>

                      <div class="progress">
                        <div class="progress-bar animated" role="progressbar" aria-valuenow="<%= project.pledges.sum(:pledge_amount)*100 %>%"
                             aria-valuemin="0" aria-valuemax="100"
                             data-animtype="animate-progress"
                             data-animrepeat="0">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>

      </div>
    </div>

    
  </div>
</div>
<%= content_for :bottom_scripts do %>

<% end %>
