<% body_id "sign_in" %>
<div class="content-wrapper hide-until-loading">
  <div class="body-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12 animated" data-animtype="flipInY"
             data-animrepeat="0"
             data-speed="1s"
             data-delay="0.5s">
          <h2 class="h2-section-title">
            <%= capitalize_first_word_letter(t :sign_in) %>
          </h2>

        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-sm-5 centered">
          <div class="classic-form">
            <%= form_for(resource, as: resource_name, :html => {:class => "login-form form-horizontal"}, url: session_path(resource_name)) do |f| %>


                <div class="form-group">
                  <div class="">
                    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: capitalize_first_word_letter(t :email) %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="">
                    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: capitalize_first_word_letter(t :password) %>
                  </div>
                </div>
                <% if !flash[:alert].blank? %>
                <div class="row">
                  <ul class="errors">
                    <%= content_tag(:li, flash[:alert], :id => "flash_alert", :class => 'text-danger') if flash[:alert] %>
                  </ul>
                </div>
                    <% end %>
                <div class="form-group">
                  <div class="col-sm-6 remember-me">
                    <%= f.check_box :remember_me %>
                    <%= f.label capitalize_first_word_letter(t :remember_me), for: 'user_remember_me' %>

                  </div>
                  <div class="col-sm-6 forgot-password">
                    <%= link_to "Quên mật khẩu?", new_password_path(resource_name) %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="">
                    <%= f.submit capitalize(t :sign_in), class: 'btn btn-block btn-primary' %>
                  </div>
                </div>
                <div class="not-member text-center">
                  Bạn chưa là thành viên? Xin mời <%= link_to "đăng ký", new_registration_path(resource_name) %>
                </div>

            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div><!--.content-wrapper end -->


