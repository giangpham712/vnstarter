<% page_title capitalize_first_letter('text.sign_up') %>
<% body_id "sign_up" %>
<div class="content-wrapper hide-until-loading">
  <div class="body-wrapper">
    <div class="content-head">
      <h2 class="h2-section-title"><%= capitalize_first_letter('text.sign_up') %></h2>
    </div>
    <div class="content-main">
      <div class="container">
        <div class="row">
          <div class="col-xs-7 col-sm-7 col-md-5 col-lg-5 centered">
            <div class="classic-form">
              <%= form_for(resource, as: resource_name, :html => {:class => "register-form form-horizontal"}, url: registration_path(resource_name)) do |f| %>

                  <% if resource.errors.any? %>
                      <div>
                        <ul class="errors">
                          <% resource.errors.full_messages.each do |msg| %>
                              <li class="text-danger"><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                  <% end %>

                  <div class="form-group">
                    <div class="">
                      <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: capitalize_first_letter('text.name') %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="">
                      <%= f.text_field :email, class: 'form-control', placeholder: capitalize_first_letter('text.email') %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="">
                      <% if @validatable %>
                      <% end %>
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: capitalize_first_letter('text.password') %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="">
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: capitalize_first_letter('text.confirm_password') %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="">
                      <%= f.submit t('text.sign_up'), class: 'btn btn-block btn-primary' %>
                    </div>
                  </div>
                  <div class="already-member text-center">
                    <%= t('text.already_a_member') %> <%= t('text.please') %> <%= link_to t('text.sign_in'), new_session_path(resource_name) %>
                  </div>

              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div><!--.content-wrapper end -->



