<%= page_title @user.name %>
<%= body_id "profile_overview" %>

<div class="content-wrapper">
  <div class="body-wrapper">
    <div class="content-head text-center">
      <div class="container">
        <h2 class="text-left"><%= @user.name %></h2>
        <h6>&nbsp;</h6>
      </div>
    </div>
    <div class="content-nav">
      <div class="container">
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="/profile/">Thông tin cá nhân</a>
          </li>
          <li>
            <%= link_to "Dự án đã tạo", profile_projects_path %>
          </li>
        </ul>
      </div>
    </div>

    <div class="content-main">
      <div class="container">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="profile-avatar">
                <%= image_tag @user.avatar_url %>
            </div>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <div class="profile-user-info">
            <h2><%= @user.name %></h2>
            <a class="location" href="javascript:void(0);"><i class="icon icon-location"></i><%= @user.location %>, Việt Nam</a>
            <p>
              <%= @user.biology %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>