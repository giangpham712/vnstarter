<% body_id "discover_category" %>
<% page_title "Khám phá dự án » #{@category.name}" %>
<div class="content-wrapper hide-until-loading discover-page">
  <div class="body-wrapper">
    <div class="content-head">

    </div>
    <div class="content-main">

      <div id="projects">
        <div class="container">
          <div class="project-card-list">
            <h2 class="section-title">Tìm hiểu về các dự án thuộc lĩnh vực <%= @category.name %></h2>

            <div class="row">
              <% @projects.each do |project| %>
                  <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
                    <div class="feature project animated project-block" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                      <%= link_to(project) do %>
                          <div class="feature-image img-overlay">
                            <%= image_tag project.image.url(:small) %>
                          </div>
                      <% end %>
                      <div class="feature-content">
                        <div class="project-info">
                          <%= link_to(project) do %>
                              <h6 class="project-title">
                                <%= project.title %>
                              </h6>
                          <% end %>
                          <p>
                            <%= project.short_description %>
                          </p>
                        </div>

                        <div class="project-status">
                          <p><span class="fa fa-map-marker"></span>&nbsp;<%= project.location %></p>

                          <div class="progress">
                            <div class="progress-bar animated" role="progressbar" aria-valuenow="<%= project.pledges.sum(:pledge_amount) / project.funding_goal * 100 %>%"
                                 aria-valuemin="0" aria-valuemax="100"
                                 data-animtype="animate-progress"
                                 data-animrepeat="0">
                            </div>
                          </div>
                          <ul class="project-stats">
                            <li>
                              <div class="project-stats-value">
                                <%= number_to_percentage(project.pledges.sum(:pledge_amount) / project.funding_goal * 100) %>
                              </div>
                              <div class="project-stats-label">
                                mục tiêu
                              </div>
                            </li>
                            <li>
                              <div class="project-stats-value">
                                <%= number_to_currency(100000, precision: 0) %>
                              </div>
                              <div class="project-stats-label">
                                được góp
                              </div>
                            </li>
                            <li>
                              <div class="project-stats-value">
                                <%= (project.deadline - project.launched_at).to_i / 1.day %> ngày
                              </div>
                              <div class="project-stats-label">
                                còn lại
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>