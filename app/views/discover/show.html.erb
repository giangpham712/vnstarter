<% page_title "Kanzi" %>
<% body_id "home" %>
<div class="body-wrapper">

  <div class="content-wrapper">
    
    <div id="top-projects">
      <div class="container">

        <div class="row">
          <div class="col-md-12 col-sm-12 animated" data-animtype="fadeInUp"
               data-animrepeat="0"
               data-speed="1s"
               data-delay="0.4s">
            <h2>Những dự án thuộc chuyên mục</h2>
          </div>
        </div>
        <div class="space-sep20"></div>
        <div class="row">

          <% @projects.each do |project| %>
              <div class="col-md-3 col-sm-3">
                <div class="feature project animated" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                  <div class="feature-image img-overlay">
                    <% if project.image.exists? %>
                        <%= image_tag project.image.url(:listing) %>
                    <% end %>

                    <div class="item-img-overlay">
                      <a class="portfolio-zoom fa fa-plus" href="media/blog1.jpg"
                         data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>

                    </div>

                  </div>

                  <div class="feature-content">
                    <div class="project-info">
                      <%= link_to(project) do %>
                          <h6 class="project-title">
                            <%= project.title %>
                          </h6>
                      <% end %>

                      <p>
                        <%= project.short_description %>
                      </p>


                    </div>

                    <div class="project-status">
                      <p><span class="fa fa-map-marker"></span>&nbsp;<%= project.location %></p>

                      <div class="progress">
                        <div class="progress-bar animated" role="progressbar" aria-valuenow="<%= project.pledges.sum(:pledge_amount)*100 %>%"
                             aria-valuemin="0" aria-valuemax="100"
                             data-animtype="animate-progress"
                             data-animrepeat="0">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>

      </div>
    </div>

