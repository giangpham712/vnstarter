<% page_title "Khám phá dự án" %>
<% body_id "discover" %>
<div class="content-wrapper  discover-page">
  <div class="body-wrapper">
    <div class="content-head text-center">
      <div class="container"><h2>Hãy chọn lĩnh vực mà bạn quan tâm</h2></div>
    </div>

    <div class="content-main">
      <div id="categories" class="alt-bg">
        <div class="container">
          <div class="row">
            <div class="categories">
              <% @categories.each do |category| %>
                  <div class="col-md-3 col-sm-3 category">
                    <div class="content-box content-style4 medium animated"
                         data-animtype="fadeIn"
                         data-animrepeat="0"
                         data-animspeed="1s"
                         data-animdelay="0.2s">
                      <%= link_to discover_category_path(category) do %>
                          <h4 class="h4-body-title">
                            <i class="<%= category.icon_class %>"></i>
                            <%= category.name %>
                          </h4>
                      <% end %>
                      <div class="content-box-text">
                        <p>Có 0 dự án về <%= category.name %></p>
                        <div>
                          <%= link_to discover_category_path(category), class: "btn btn-sm btn-discover" do %>
                              <span>Xem chi tiết</span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>

      <div id="staff_picked_projects">
        <div class="container">

          <div class="slider-container">
            <div class="row">
              <div class="col-md-10 col-sm-10">
                <div class="slider-vertical">
                  <div class="project slide">

                    <h2 class="section-title">Dự án của tháng: <%= @projects.first.category.name %></h2>

                    <div class="row">
                      <div class="col-md-5 col-sm-5 animated " data-animtype="fadeInLeft"
                           data-animrepeat="0"
                           data-speed="1s"
                           data-delay="0.4s">
                        <div class="text-center">
                          <img width="100%" src="<%= @projects.first.image.url(:small) %>" alt="iPhone"/>
                        </div>
                      </div>

                      <div class="col-md-7 col-sm-7 animated" data-animtype="fadeInRight"
                           data-animrepeat="0"
                           data-speed="1s"
                           data-delay="0.4s">
                        <div>
                          <h3>
                            <%= link_to project_path(@projects.first) do %>
                                <%= @projects.first.title %>
                            <% end %>
                          </h3>
                          <h6>thực hiện bởi <b><%= @projects.first.user.name %></b></h6>

                          <p class=""><%= @projects.first.short_description %></p>
                          <br/>
                          <br/>

                          <div class="project-status discover-progress">

                            <div class="progress">
                              <div class="progress-bar animated" role="progressbar" aria-valuenow="70%"
                                   aria-valuemin="0" aria-valuemax="100"
                                   data-animtype="animate-progress"
                                   data-animrepeat="0">
                              </div>
                            </div>
                          </div>
                        </div>

                      </div>
                    </div>
                  </div>

                </div>
              </div>
              <div class="col-md-2 col-sm-2">
                <ul class="slider-nav">
                  <% @categories.each_with_index do |category| %>
                      <li><a href=""><%= category.name %></a></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div id="featured_projects" class="alt-bg">
        <div class="container">
          <div class="project-card-list">
            <h2 class="section-title">Dự án nổi bật</h2>

            <div class="row">
              <% @projects.each do |project| %>
                  <div class="col-md-4 col-sm-4">
                    <div class="feature project animated project-block" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                      <%= link_to(project) do %>
                          <div class="feature-image img-overlay">
                            <%= image_tag project.image.url(:small) %>
                          </div>
                      <% end %>
                      <div class="feature-content">
                        <div class="project-info">
                          <%= link_to(project) do %>
                              <h6 class="project-title">
                                <%= project.title %>
                              </h6>
                          <% end %>
                          <p>
                            <%= project.short_description %>
                          </p>
                        </div>

                        <div class="project-status">
                          <p><span class="fa fa-map-marker"></span>&nbsp;<%= project.location %></p>

                          <div class="progress">
                            <div class="progress-bar animated" role="progressbar" aria-valuenow="<%= project.pledges.sum(:pledge_amount) / project.funding_goal * 100 %>%"
                                 aria-valuemin="0" aria-valuemax="100"
                                 data-animtype="animate-progress"
                                 data-animrepeat="0">
                            </div>
                          </div>
                          <ul class="project-stats">
                            <li>
                              <div class="project-stats-value">
                                <%= number_to_percentage(project.pledges.sum(:pledge_amount) / project.funding_goal * 100) %>
                              </div>
                              <div class="project-stats-label">
                                mục tiêu
                              </div>
                            </li>
                            <li>
                              <div class="project-stats-value">
                                <%= number_to_currency(project.pledges.sum(:pledge_amount), precision: 0) %>
                              </div>
                              <div class="project-stats-label">
                                được góp
                              </div>
                            </li>
                            <li>
                              <div class="project-stats-value">
                                <%= (project.deadline - Time.zone.now).to_i / 1.day %> ngày
                              </div>
                              <div class="project-stats-label">
                                còn lại
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
